<h1>Show Book</h1>
<ul>
  <li>
    <strong>Name:</strong>
    <%= @book.name %>
  </li>
  <li>
    <strong>Description:</strong>
    <%= @book.description %>
  </li>
  <li>
    <strong>Cover:</strong>
    <img src="<%= get_image_thumb(@book.cover_url,@book) %>" />
  </li>
</ul>
<span><%= link "Edit", to: Routes.user_book_path(@conn, :edit, @book) %></span>
<span><%= link "Back", to: Routes.user_book_path(@conn, :index) %></span>
